{
    "name": "DivDessimator",
    "version": "1.0",
    "description": "Dessimate All unwanted divs!",
    "manifest_version": 2,
    "permissions": [
        "activeTab"
      ],
    "background": {
      "scripts": ["js/jquery.js","js/background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["js/jquery.js"]
      }
    ],
    "icons": { 
      "16": "images/sketch16.png",
      "48": "images/sketch48.png",
      "128": "images/sketch128.png" 
    },
    "browser_action": {
        "default_popup": "popup.html"
    }
    
}